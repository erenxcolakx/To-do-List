<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <title>To-Do</title>
</head>
<body style="background-color: rgb(89, 0, 172);">
<section id="body">
  <div class="mt-5 mx-4">
    <div class="row">
      <div class="col mb-0 pb-0">
        <div id="to-do-rectangle" class="mx-auto mt-5 mb-0 pb-0">
          <div class="row">
            <div class="col d-flex justify-content-evenly mt-3">
              <button> <img src="/styles/images/add.png" id="addButton" width="52px" height="52px" alt="addEvent" title="Add item"></button>
            </div>
          </div>
          <div class="ms-2" id="todo-container">
            <form method="POST" action="/add" class="mx-3">
              <input type="text" class="form-control bg-white d-none" id="itemInput" name="todoText" required>
              <input type="submit" name="add-to-do-item" class="mx-auto d-none mt-2 ms-3" id="addEventButton" value="Add">
            </form>
            <ul class="list-group list-group-flush ms-3" id="to-do-list">
              <% todoItems.forEach(item => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center" id="list-items">
                  <label class="form-check-label">
                    <p class="my-auto to-do-text"><%= item %></p>
                  </label>
                  <button id="deleteButton" class="my-1 deleteButton" onclick="toggleLineThrough(this.previousElementSibling.querySelector('p'))"> <img src="/styles/images/delete.png"  width="22px" height="22px" alt="deleteEvent" title="Delete item"></button>
                </li>
              <% }); %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


<footer>
  <p class="text-center mt-5">Copyright Â© <%= new Date().getFullYear() %></p>
</footer>
<script
  src="https://code.jquery.com/jquery-3.7.1.slim.min.js"
  integrity="sha256-kmHvs0B+OpCW5GVHUNjv9rOmY0IvSIRcf7zGUDTDQM8="
  crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="script.js"></script>

</body>

</html>